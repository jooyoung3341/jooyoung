<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="project">

<!-- 프로젝트 등록 -->
<insert id="register" parameterType="Project">
	insert into project(id, title, content, image)
	values(#{id}, #{title}, #{content}, #{image})
</insert>

<!-- 프로젝트 목록 -->
<select id="projectlist" resultType="Project">
	select pno, title, image
	from project
</select>

<!--프로젝트 상세보기  -->
<select id="detail" parameterType="java.lang.Integer" resultType="Project">
	select *
	from project
	where pno = #{pno}
</select>
<!-- 로그인 -->
<select id="login" parameterType="java.lang.String" resultType="User">
	select *
	from user
	where id = #{id}
</select>
</mapper>